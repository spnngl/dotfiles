" Import bepo keyboard settings "
source ~/.vimrc.bepo

" Divers "
set number
set nocompatible
set cursorline
set noerrorbells
set incsearch
set hlsearch

set shell=/bin/zsh
set undolevels=1000
syntax on
filetype plugin on

" Indent options "
set autoindent
set ts=4
set sw=4
set shiftwidth=4
set colorcolumn=90

" Colors "
set t_Co=256
set background=dark
colorscheme genericdc
"colorscheme BusyBee

hi ColorColumn ctermbg=256
