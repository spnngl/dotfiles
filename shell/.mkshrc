bind -m '^L'=clear'^J'

PS1='$(date +%H:%M:%S)|' 
PS1+="\${PWD##*/} \$ "
export PS1

PATH=$PATH:/sbin/:/opt/local/bin/:/usr/sbin/:$GOPATH/bin/
PATH+=:$HOME/Library/Haskell/bin/
PATH+=:$HOME/bin/
export PATH

export GOPATH="$HOME/src/go"
export EDITOR=/usr/bin/vim
export TOP='-s 1'
export PAGER=less
export ENV=$HOME/.mkshrc
export VIMINIT='source $HOME/.vim/vimrc'

export HISTFILE=$HOME/.mksh.hist
HISTSIZE=3000

alias ipython='ipython --pylab --no-banner --colors=Linux'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ls='ls -G'
alias ll='ls -lh'
alias g='git'
